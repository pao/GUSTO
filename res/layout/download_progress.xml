<ViewSwitcher android:id="@+id/ViewSwitcher"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:focusable="false" android:layout_gravity="center">
	<CheckBox android:id="@+id/CheckBox" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:clickable="false"
		android:focusable="false" android:layout_gravity="center"></CheckBox>
	<ProgressBar android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:indeterminate="true"
		android:id="@+id/ProgressBar" style="?android:attr/progressBarStyleHorizontal"
		android:layout_gravity="center">
	</ProgressBar>
</ViewSwitcher>
